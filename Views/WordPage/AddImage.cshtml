
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Image to Word Document</h2>

<form asp-controller="WordPage" asp-action="AddImage" method="post" enctype="multipart/form-data">
    <div>
        <label>Select image (JPG/PNG):</label>
        <input type="file" name="uploadedImage" accept=".jpg,.jpeg,.png" multiple required />
    </div>
    <button type="submit">Add Image to Word & Download</button>
</form>

@if (ViewBag.Message != null)
{
    <p style="color: green">@ViewBag.Message</p>
}
