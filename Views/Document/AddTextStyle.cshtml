
@{
    ViewData["Title"] = "AddTextStyle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a Styled Word Document</h2>

<form asp-action="GenerateTextDoc" method="post">
    <div class="form-group">
        <label>Text</label>
        <textarea name="Text" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label>Font Size (e.g., 14)</label>
        <input type="number" name="FontSize" class="form-control" value="14" required />
    </div>
    
    <div class="form-check mt-2">
        <input type="checkbox" name="Bold" class="form-check-input" />
        <label class="form-check-label">Bold</label>
    </div>
    <div class="form-check">
        <input type="checkbox" name="Italic" class="form-check-input" />
        <label class="form-check-label">Italic</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Generate Word Document</button>
</form>