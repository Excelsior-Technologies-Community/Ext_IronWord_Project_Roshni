
@{
    ViewData["Title"] = "AddGlowEffect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Glow Text Effect</h2>

<form asp-action="GenerateGlowDoc" method="post">
    <div>
        <label>Enter Text:</label><br />
        <textarea name="inputText" rows="5" cols="50" required></textarea>
    </div>
    <br />
    <button type="submit">Generate Word Document</button>
</form>